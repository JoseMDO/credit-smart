<div class="card" style="width: 18rem">
  <div class="card-body">
    <h5 class="card-title"><%= credit_card.name %></h5>
    <img src="..." class="card-img-top" alt="...">
    <p class="card-text"><%= credit_card.details %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <p>Annual Fee: <%= credit_card.annual_fee %></p>
    </li>
    <li class="list-group-item">
      <p>Issuer: <%= credit_card.issuer %></p>
    </li>
    <li class="list-group-item">
      <%# if Reward.find_by(credit_card_id: credit_card.id, category_id: @user_transaction.category_id).percentage_back %>
<!--        <h6>Cash Back: <%#= Reward.find_by(credit_card_id: credit_card.id, category_id: @user_transaction.category_id).percentage_back  %></h6>-->
      <%# else %>
<!--        <h6>Cash Back: <%#= Reward.find_by(credit_card_id: credit_card.id, category_id: Category.where(name: "All")).percentage_back  %></h6>  -->
      <%# end %>
    </li>
  </ul>
  <div class="card-body">
    <%= link_to 'Card Details', credit_card.url, target: "_blank" %>
  </div>
</div>
