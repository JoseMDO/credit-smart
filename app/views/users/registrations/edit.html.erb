<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card shadow p-3">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Edit Account</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="mb-3">
              <%= f.input :email, label: "Email", required: true, autofocus: true, input_html: { class: "form-control", autocomplete: "email" } %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <div class="mb-3">
              <%= f.input :password, label: "New Password", hint: "Leave it blank if you don't want to change it", required: false, input_html: { class: "form-control", autocomplete: "new-password" } %>
            </div>

            <div class="mb-3">
              <%= f.input :password_confirmation, label: "Confirm New Password", required: false, input_html: { class: "form-control", autocomplete: "new-password" } %>
            </div>

            <div class="mb-3">
              <%= f.input :current_password, label: "Current Password", hint: "We need your current password to confirm your changes ", required: true, input_html: { class: "form-control", autocomplete: "current-password" } %>
            </div>

            <div class="text-center">
              <%= f.button :submit, "Update", class: "btn btn-outline-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-4 text-center">
        <h3>Cancel my account</h3>
        <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger", style: "padding: 6px 12px;" %></div>
      </div>

      <%= link_to "Back", :back, class: "d-block mt-3 text-center" %>
    </div>
  </div>
</div>
