<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card shadow p-3">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.input :email,
                          label: "Email",
                          required: false,
                          autofocus: true,
                          input_html: { class: "form-control", autocomplete: "email" } %>
            </div>

            <div class="mb-3">
              <%= f.input :password,
                          label: "Password",
                          required: false,
                          input_html: { class: "form-control", autocomplete: "current-password" } %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: "form-check-input" } %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
